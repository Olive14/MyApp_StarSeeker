<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/seekBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="星座を探す" />
            <TextView
                android:id="@+id/item_category_starList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="■観測可能な星座一覧" />
            <Spinner
                android:id="@+id/starList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/starList_prompt"/>
            <TextView
                android:id="@+id/category_starName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="■星座" />
            <TextView
                android:id="@+id/starName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />
            <TextView
                android:id="@+id/category_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="■内容" />
            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />
            <TextView
                android:id="@+id/category_origin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="■起源" />
            <TextView
                android:id="@+id/origin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />
            <TextView
                android:id="@+id/category_starImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="■星図" />
            <TextView
                android:id="@+id/starImageURL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />
            <ImageView
                android:id="@+id/starImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="星図"
                android:src="@drawable/ic_launcher"/>
        </LinearLayout>
     </ScrollView>
</LinearLayout>